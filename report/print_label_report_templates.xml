<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="print_label_prod2">
            <t t-call="report.html_container">

                <t
                    t-call="print_label_cst.prod_report_document2"
                    t-lang="user.partner_id.lang"/>
            </t>
        </template>

        <!-- Translatable template -->
        <template id="prod_report_document2">
            <t t-set="docs" t-value="docs.with_context({'lang':user.partner_id.lang})" />
            <!--<t t-call="report.external_layout">-->
                <t t-foreach="docs" t-as="o">
                    <t t-foreach="o.order_line" t-as="line">

                        <t t-foreach="decimal_format(line.product_qty)" t-as="qty">
                            <div class="page">
                                <div class="row" style="border: 0px solid #ddd">
                                    <div class="col-xs-6" style="font-size: 14px; margin-top:0; margin-bottom:0;">
                                        <strong><span t-esc="o.company_id.name" /></strong>
                                    </div>
                                    <div class="col-xs-6" style="font-size: 12px; margin-top:0; margin-bottom:0;">
                                        <strong><span t-esc="o.date_order" />
                                        </strong>

                                    </div>
                                </div>
                                <!--<br/>-->
                                <div class="row" style="border: 0px solid #ddd">
                                    <div class="col-xs-10" style="border: 0px solid #ddd">
                                        <div class="row" style="font-size: 16px;border: 0px solid #ddd">
                                            <div class="col-xs-5" style="margin-top:0; margin-bottom:0;">
                                                <strong><span t-esc="line.product_id.season_id.name" /></strong>
                                            </div>
                                            <div class="col-xs-7" style="margin-top:0; margin-bottom:0;">
                                                <strong><span t-esc="line.product_id.product_tmpl_id.product_brand_id.name" />
                                                </strong>
                                            </div>

                                        </div>
                                        <!--<br/>-->
                                        <div class="row" style="font-size: 16px;">
                                            <strong><span t-esc="line.product_id.product_color_id.name" /></strong>
                                        </div>
                                        <div class="row" style="font-size: 16px;">
                                            <strong><span t-esc="line.product_id.default_code" /></strong>
                                        </div>
                                        <div class="row" style="font-size: 12px;">
                                            <strong>Acabado: </strong>
                                            <span t-if="line.product_id.product_box_id" >
                                                <strong>CAJA: <span t-esc="line.product_id.product_box_id.name" /></strong>
                                            </span>
                                            <span t-if="not line.product_id.product_box_id">
                                                <strong>N/A</strong>
                                            </span>
                                        </div>

                                    </div>
                                    <div class="col-xs-2 " style="border: 0px solid #ddd;font-size: 6px">
                                        <div class="row " style="font-size: 6px; layout-flow: vertical-ideographic; transform-origin: left top 0;border: 0px solid #ddd; transform: rotate(-90deg); transform-origin: left top 0;-webkit-transform: rotate(-90deg)">
                                            <span t-esc="get_pick(line.product_id.id, line.id)" style="font-size: 6px; border: 0px solid #ddd; transform: rotate(-90deg); transform-origin: left top 0;-webkit-transform: rotate(-90deg);layout-flow: vertical-ideographic;"/>
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', get_pick(line.product_id.id, line.id), 60, 10)" style="width:60px;height:20px;border: 0px solid #ddd;margin:0px"/>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                <div class="col-xs-8 " name="left_box" style="border: 0px solid #ddd">
                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', line.product_id.product_tmpl_id.barcode, 600, 100)" style="width:200px;height:30px; "/>
                                </div>
                                <div class="col-xs-4" style="font-size: 30px;border: 0px solid #ddd">
                                    <span t-if="line.product_id.attribute_value_ids" >
                                        <strong><span t-esc="line.product_id.attribute_value_ids[0].name" /></strong>
                                    </span>
                                </div>
                                <div class="col-xs-8 text-right" style="font-size: 8px;border: 0px solid #ddd">
                                    <span t-esc="line.product_id.product_tmpl_id.barcode" />

                                </div>
                            </div>

                            </div>
                        </t>
                    </t>
                </t>
            <!--</t>-->
        </template>

    </data>
</odoo>
